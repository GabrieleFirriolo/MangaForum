@page
@model CreatePostModel
@{
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="keywords" content="Crea un nuovo Post!">
    <meta name="description" content="">
    <meta name="page_type" content="np-template-header-footer-from-plugin">
    <title>CreatePost</title>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
<link rel="stylesheet" href="~/css/CreatePost.css" media="screen">
    <script class="u-script" type="text/javascript" src="~/css/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="~/css/nicepage.js" defer=""></script>
    <meta name="generator" content="Nicepage 4.9.5, nicepage.com">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500,600,700">
    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="CreatePost">
    <meta property="og:type" content="website">
  </head>
   <section class="u-clearfix u-image u-shading u-section-1" id="sec-f9fe" data-image-width="1000" data-image-height="1000">
      <div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
        <div class="u-container-style u-expanded-width u-grey-10 u-group u-group-1">
          <div class="u-container-layout u-container-layout-1">
            <h2 class="u-custom-font u-font-oswald u-subtitle u-text u-text-default u-text-1">Crea un nuovo Post!</h2>
            <div class="u-form u-form-1">
                <form  method="post" style="padding: 20px;">
                    @if(!Request.QueryString.HasValue)
                    {
                    
                         <div class="u-form-group u-form-group-3">
                            <select asp-for="Topic.id_Topic" class="form-control">
                                <option selected="selected">Seleziona un topic :</option>
                                @foreach (var item in Model.EleTopics)
                                {
                                    <option value="@item.id_Topic">@item.Name : @item.Manga.Title</option>
                                }
                            </select>
                            </div>
                        }
                        else
                        {
                               <div class="u-form-group u-form-group-3">
                            <select asp-for="Topic.id_Topic" class="form-control">
                                <option selected="selected" value="@Model.Topic">@Model.Topic.Name : @Model.Topic.Manga.Title</option>
                                @foreach (var item in Model.EleTopics)
                                {
                                    <option value="@item.id_Topic">@item.Name : @item.Manga.Title</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.Topic" class="text-danger"></span>

                            </div>
                        }

                    
                    <div class="u-form-group u-form-message">
                        <label for="message-ba0f" class="u-label u-label-4">Messaggio</label>
                        <textarea asp-for="FirstMessage" placeholder="Scrivere il messaggio ..." rows="4" cols="50" class="u-border-1 u-border-grey-30 u-input u-input-rectangle u-radius-7 u-white" required="" maxlength="500"></textarea>
                    </div>
                    <div class="u-align-center u-form-group u-form-submit">
                        <input type="submit" value="Create"  class="u-border-none u-btn u-btn-round u-btn-submit u-button-style u-hover-palette-1-light-2 u-palette-1-light-1 u-radius-13 u-btn-1"/>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    </section>
